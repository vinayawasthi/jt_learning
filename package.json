{
  "name": "typescript-tutorial",
  "version": "1.0.0",
  "description": "learning typescript",
  "main": "./src/main.ts",
  "author": "vinay avasthi",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf ./script/dist/* && tsc",
    "start.dev": "yarn run build && yarn run lite-server",
